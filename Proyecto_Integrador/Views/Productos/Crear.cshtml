@model Proyecto_Integrador.Models.Productos

@{
    /**/

    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agregar</h2>

@using (Html.BeginForm("Create", "Productos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="row">
        <div class="col-xs-6 col-xs-offset-1">
            <div class="form-group">
                <label for="email">Nombre:</label>
                <input type="text" class="form-control" id="Nombre" placeholder="Ingrese Nombre" name="Nombre" >
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-6 col-xs-offset-1">
            <div class="form-group">
                <label for="email">Precio:</label>
                <input type="number" class="form-control" id="Precio" placeholder="Ingrese Precio" name="Precio" >
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-xs-offset-1">
            <div class="form-group">
                <label for="email">Cantidad:</label>
                <input type="number" class="form-control" id="Cantidad" placeholder="Ingrese Cantidad" name="Cantidad">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-xs-offset-1">
            <div class="form-group">
                <label for="email">Descripcion:</label>
                <textarea type="number" class="form-control" id="Descripcion" placeholder="Ingrese Descripcion" name="Descripcion"></textarea>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-xs-offset-1">
            <div class="form-group">
                <label for="email">Imagen:</label>
                @(Html.DevExtreme().FileUploader()
                                    .Name("Photo")
                                    .SelectButtonText("Imagen")
                                    .LabelText("")
                                    .Accept("image/*")
                                    .UploadMode(FileUploadMode.UseForm)
                )
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2 col-xs-offset-3">
            @(Html.DevExtreme().Button()
                                .ID("button")
                                .Text("Agregar")
                                .Type(ButtonType.Success)
                                .UseSubmitBehavior(true)
            )
        </div>
    </div>

  
}

<div>
    @Html.ActionLink("Lista Productos", "Index")
</div>
